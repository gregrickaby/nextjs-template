{
  "name": "nextjs-template",
  "version": "1.0.0",
  "description": "A simple Next.js template.",
  "homepage": "https://github.com/gregrickaby/nextjs-template/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/nextjs-template.git"
  },
  "author": "gregrickaby <gregrickaby@gmail.com>",
  "bugs": {
    "url": "https://github.com/gregrickaby/nextjs-template/issues"
  },
  "private": true,
  "license": "GPL-2.0",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "next build",
    "clean": "rm -rf .next",
    "deploy prod": "vercel --prod",
    "deploy staging": "vercel",
    "dev": "yarn clean && next dev",
    "develop": "yarn dev",
    "export": "next export",
    "format": "npx prettier --config=prettier.config.js '**/*.{js,jsx,ts,tsx,md,html,css,scss,json}' --write || true",
    "lint": "yarn format && yarn lint:js && yarn lint:css",
    "lint:css": "npx stylelint --config=stylelint.config.js '**/*.css' --fix || true",
    "lint:js": "npx eslint --config=.eslintrc.js ./ --fix || true",
    "postbuild": "next-sitemap",
    "start": "next start"
  },
  "dependencies": {
    "next": "latest",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.2",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "next-seo": "^4.22.0",
    "next-sitemap": "^1.6.9",
    "postcss": "^8.2.8",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.2.1",
    "prop-types": "^15.7.2",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "tailwindcss": "^2.0.4"
  }
}
