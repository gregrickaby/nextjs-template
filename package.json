{
  "name": "nextjs-template",
  "version": "1.0.0",
  "description": "A simple Next.js template.",
  "homepage": "https://github.com/gregrickaby/nextjs-template/blob/main/README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gregrickaby/nextjs-template.git"
  },
  "author": "gregrickaby <gregrickaby@gmail.com>",
  "bugs": {
    "url": "https://github.com/gregrickaby/nextjs-template/issues"
  },
  "private": true,
  "license": "GPL-2.0",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "build": "next build",
    "clean": "rm -rf .next",
    "deploy prod": "vercel --prod",
    "deploy staging": "vercel",
    "dev": "npm run clean && next dev",
    "develop": "npm run dev",
    "export": "next export",
    "format": "npx prettier '**/*.{js,jsx,ts,tsx,md,mdx,html,css,scss,json,yml}' --config=.prettierrc.js --write || true",
    "lint": "npm run format && npm run lint:js && npm run lint:css && npm run lint:md",
    "lint:css": "npx stylelint '**/*.css' --config=.stylelintrc.js --fix || true",
    "lint:js": "npx eslint '**/*.{js,ts,jsx,tsx}' --config=.eslintrc.js --fix || true",
    "lint:md": "npx markdownlint '**/*.{md,mdx}' --config=.markdownlint.json --fix",
    "postbuild": "next-sitemap",
    "start": "next start"
  },
  "dependencies": {
    "next": "latest",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@arkweid/lefthook": "^0.7.6",
    "autoprefixer": "^10.2.6",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "markdownlint": "^0.23.1",
    "markdownlint-cli": "^0.27.1",
    "next-seo": "^4.24.0",
    "next-sitemap": "^1.6.105",
    "postcss": "^8.3.3",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-preset-env": "^6.7.0",
    "prettier": "^2.3.1",
    "prop-types": "^15.7.2",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "tailwindcss": "^2.1.4"
  }
}
